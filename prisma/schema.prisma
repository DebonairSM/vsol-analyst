// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  googleId  String    @unique
  name      String
  email     String    @unique
  picture   String?
  isAdmin   Boolean   @default(false)
  companies Company[]
  createdAt DateTime  @default(now())
}

model Company {
  id        String    @id @default(cuid())
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  projects  Project[]
  createdAt DateTime  @default(now())
}

model Project {
  id                       String        @id @default(cuid())
  name                     String
  companyId                String
  company                  Company       @relation(fields: [companyId], references: [id])
  sessions                 ChatSession[]
  epics                    Epic[]
  userStories              UserStory[]
  sourceProjectId          String?
  sourceProject            Project?      @relation("ProjectBranch", fields: [sourceProjectId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  branchedProjects         Project[]     @relation("ProjectBranch")
  generatedRequirements    Json?
  generatedUserStories     Json?
  requirementsExtractedAt  DateTime?
  requirementsMarkdown     String?
  requirementsMermaid      String?
  detailedFlowchartMermaid String?
  seedData                 Json?
  createdAt                DateTime      @default(now())
  updatedAt                DateTime      @updatedAt
}

model ChatSession {
  id          String       @id @default(cuid())
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id])
  history     Json
  attachments Attachment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Attachment {
  id         String      @id @default(cuid())
  filename   String
  storedPath String
  fileType   String
  mimeType   String
  parsedData Json?
  sessionId  String
  session    ChatSession @relation(fields: [sessionId], references: [id])
  createdAt  DateTime    @default(now())
}

enum StoryStatus {
  OPEN
  IN_PROGRESS
  READY_FOR_REVIEW
  IN_REVIEW
  DONE
  REMOVED
}

enum StoryPriority {
  MUST_HAVE
  SHOULD_HAVE
  NICE_TO_HAVE
}

enum StoryEffort {
  SMALL
  MEDIUM
  LARGE
}

model Epic {
  id          String      @id @default(cuid())
  name        String
  description String
  icon        String
  projectId   String
  project     Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  stories     UserStory[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model UserStory {
  id                  String              @id @default(cuid())
  title               String
  actor               String
  action              String
  benefit             String
  status              StoryStatus         @default(OPEN)
  priority            StoryPriority
  effort              StoryEffort
  team                String              @default("Team Sunny")
  acceptanceCriteria  Json
  epicId              String
  epic                Epic                @relation(fields: [epicId], references: [id], onDelete: Cascade)
  projectId           String
  project             Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  originalStoryId     String?
  originalStory       UserStory?          @relation("StoryBranch", fields: [originalStoryId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  branchedStories     UserStory[]         @relation("StoryBranch")
  statusTransitions   StatusTransition[]
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
}

model StatusTransition {
  id          String      @id @default(cuid())
  userStoryId String
  userStory   UserStory   @relation(fields: [userStoryId], references: [id], onDelete: Cascade)
  fromStatus  StoryStatus?
  toStatus    StoryStatus
  transitionedAt DateTime @default(now())
}
